<h3>登録済みルーム一覧</h3>

<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>料金</th>
      <th>作成日</th>
    </tr>
  </thead>


 <tbody>
  <% @rooms.each do |room| %>
  <tr>
    <td><%= image_tag room.roomimage_id.url,size: '80x80', class: 'room_image' %></td>
    <td><%= link_to room.roomname,room_path(room.id)%></td>
    <td><%= room.roomprofile %></td>
    <td><%= room.price %></td>
    <td><%= room.created_at.to_s(:datetime_jp) %></td>
  </tr>
  <% end %>
 </tbody>
</table>