<h2>新規登録画面</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :username, placeholder: "ユーザー名", autofocus: true, autocomplete: "username" %>
  </div>
  
    <div class="field">
    <%= f.text_field :email, placeholder: "メールアドレス", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "パスワード", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation,  placeholder: "パスワード", autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
<% end %>


<a href="/users/sign_in">すでにアカウントをお持ちの方はログイン</a>
