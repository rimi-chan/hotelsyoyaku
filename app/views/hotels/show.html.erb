
<div class="container room-show">
    <div class="row">
        <div class="col-md-8">
            <div><%=  image_tag @hotel.hotel_img.url %></div>

            <div class="room-show-detile">
                <div class="room-show-detile-icon">
                    <%=link_to root_path do %>
                     <img src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon.jpg" class="host-icon">
                    <% end %>
                </div>

                <div class="room-show-profile">
                    <p class="room-show-profile-name">
                        <%= @hotel.hotel_name %>
                    </p>
                    <p class="room-show-profile-address">
                       <%= @hotel.hotel_addres %>
                    </p>
                </div>
            </div>

            <p class="room-show-detile-content">
                <%= @hotel.hotel_introduction %>
            </p>
        </div>

        <div class="col-md-4">
            <div class="room-show-nav">
              

                <%= form_with model: @reservation, method: :post, url: reservations_confirm_path do |f| %>
                <%= f.hidden_field :hotel_id, value: @hotel.id %>

                     <table class="relatives_new_table">
        <tr>
         <th class="room_price">¥<%= @hotel.hotel_price %> / 日</th>
        </tr>
        <tr class= "reservation_text_field">
          <th><%= f.label :start_date ,"開始日" %></th>
          <td class="reservation_new_td"><%= f.date_field :start_date,placeholder: "年/月/日",:class => 'reservation_field'%></td>
        </tr>
         <tr class= "reservation_text_field">
          <th><%= f.label :end_date ,"終了日" %></th>
          <td class="reservation_new_td"><%= f.date_field :end_date,placeholder: "年/月/日",:class => 'reservation_field'%></td>
        </tr>
        <tr class= "reservation_text_field">
          <th class = "popular"><%= f.label :human ,"人数" %></th>
          <td class="reservation_new_td"><%= f.text_field :human,:class => 'reservation_field'%></td>
        </tr>
        <tr class= "reservation_text_field">
          <td class="reservation_new_td"> <%= f.submit "予約する",:class => 'reservation_register'%></td>
        </tr>
    <% end %>
     </table>
            </div>
        </div>    
    </div>
</div>